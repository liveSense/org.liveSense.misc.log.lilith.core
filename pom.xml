      <groupId>org.liveSense</groupId>
      <artifactId>org.liveSense.parent</artifactId>
      <version>1-SNAPSHOT</version>
  </parent>
  <scm>
      <connection>scm:git:git://github.com/liveSense/org.liveSense.service.activation.git</connection>
      <developerConnection>scm:git:git://github.com/liveSense/org.liveSense.service.activation.git</developerConnection>
      <url>https://github.com/liveSense/org.liveSense.service.activation</url>
