    <artifactId>org.liveSense.misc.log.lilithappender</artifactId>
    <packaging>bundle</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>liveSense SLF4J Lilith Appender</name>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>
							*;resolution:=mandatory,
							javax.jms;resolution:=optional,
							javax.mail;resolution:=optional,
							javax.mail.internet;resolution:=optional,
							org.apache.catalina;resolution:=optional,
							org.apache.catalina.connector;resolution:=optional,
							org.apache.catalina.valves;resolution:=optional,
							org.codehaus.janino;resolution:=optional,
							org.eclipse.jetty.http;resolution:=optional,
							org.eclipse.jetty.server;resolution:=optional,
							org.eclipse.jetty.util.component;resolution:=optional,
							org.mortbay.jetty;resolution:=optional,
							sun.reflect;resolution:=optional
						</Import-Package>
						<Embed-Dependency>
							logback-core,
							logback-classic,
							logback-access,
							de.huxhorn.lilith.data.eventsource,
							de.huxhorn.lilith.data.logging,
							de.huxhorn.lilith.data.logging.protobuf,
							de.huxhorn.lilith.logback.appender.multiplex-classic,
							de.huxhorn.lilith.logback.appender.multiplex-core,
							de.huxhorn.lilith.logback.classic,
							de.huxhorn.lilith.logback.logging-adapter,
							de.huxhorn.lilith.sender,
							de.huxhorn.sulky.codec,
							de.huxhorn.sulky.formatting,
							de.huxhorn.sulky.io,
							protobuf-java
						</Embed-Dependency>
						<Include-Resource>
							{maven-resources}
                        </Include-Resource>
                        <Export-Package>
                            org.slf4j.impl;version=1.6.1
                        </Export-Package>
					</instructions>
				</configuration>
            </plugin>
            
            <plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-scr-plugin</artifactId>
			</plugin>
            
        </plugins>

    </build>

